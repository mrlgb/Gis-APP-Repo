<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="navigationIcon">@drawable/ic_menu_camera</item>
        <item name="android:background">?colorPrimary</item>
        <!--<item name="android:elevation">4dp</item>-->
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="StyledDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrangeButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Small</item>
        <item name="colorButtonNormal">@color/orange</item>
    </style>

    <style name="SilverButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Small</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="BottomButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>

    <style name="info_title">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name ="android:gravity">center_vertical|end</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:textColor">@color/black</item>
    </style>

    <style name="info_content_input">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name ="android:textColorHint">@color/black</item>
        <item name ="android:gravity">center_vertical|start</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>

    </style>

    <style name="info_content_edittext">
        <item name ="android:gravity">center</item>
        <item name ="android:textColorHint">@color/saddlebrown</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>

    <style name="info_content_edittext_read">
        <item name ="android:gravity">center</item>
        <item name ="android:textColorHint">@color/saddlebrown</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:editable">false</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>
    <style name="info_content_spinner">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name ="android:gravity">center_vertical|start</item>
        <item name ="android:textColorHint">@color/saddlebrown</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:layout_width">0dp</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>
    <style name="info_x">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name ="android:gravity">center_vertical|start</item>
        <item name ="android:textSize">13sp</item>
        <item name ="android:textColor">@color/red</item>
        <item name ="android:text">*</item>
        <item name ="android:layout_width">0dp</item>
        <item name ="android:layout_height">wrap_content</item>
    </style>

    <style name="info_x_no">

    </style>

    <style name="info_camera">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name ="android:layout_gravity">center</item>
        <item name ="android:gravity">center</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:background">@drawable/camera_normal</item>
    </style>


</resources>
